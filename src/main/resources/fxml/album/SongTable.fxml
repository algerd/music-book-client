<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.60" 
            fx:controller="ru.javafx.musicbook.client.controller.album.SongTableController">
      
    <children>
        <VBox fx:id="tableContainer" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">     
            <children>
                <TableView fx:id="pagedTable" onMouseClicked="#onMouseClickTable" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columns>
                        <TableColumn fx:id="songTrackColumn" prefWidth="75.0" text="Track" />
                        <TableColumn fx:id="songNameColumn" prefWidth="75.0" text="Name" />
                        <TableColumn fx:id="songTimeColumn" prefWidth="75.0" text="Time" />
                        <TableColumn fx:id="songRatingColumn" prefWidth="75.0" text="Rating" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>       
    </children> 
    
</AnchorPane>
