<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" fx:id="albumTable" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" 
        fx:controller="ru.javafx.musicbook.client.controller.artist.AlbumTableController">
    
    <children>
        <VBox fx:id="tableContainer" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">  
            <children>
                <TableView fx:id="pagedTable" onMouseClicked="#onMouseClickTable" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columns>
                        <TableColumn fx:id="albumNameColumn" prefWidth="75.0" text="Album" />
                        <TableColumn fx:id="albumYearColumn" prefWidth="75.0" text="Year" />
                        <TableColumn fx:id="albumTimeColumn" prefWidth="75.0" text="Time" />
                        <TableColumn fx:id="albumRatingColumn" prefWidth="75.0" text="Rating" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>       
    </children>                   
</AnchorPane>
